# Mastodon API 설정
MASTODON_ACCESS_TOKEN=your_access_token_here
MASTODON_API_BASE_URL=https://your-mastodon-instance.com

# Google Sheets 설정
GOOGLE_CREDENTIALS_PATH=credentials/credentials.json
SHEET_ID=your_sheet_id_here

RESPONSE_PREFIX=✶ 

